<div class='container-xl' id='friends-index-container' data-controller='filters'>
  <p id="notice"><%= notice %></p>

  <h1>Friends</h1>

  <div>
    <input class="form-control me-2 w-25" type="input" name="Search" placeholder="Search" data-filters-target='input' data-action='input->filters#searchByName'>
  </div>
  <br>
  <div data-filters-target='listData' data-controller="pagination">
    <%= render 'friends/table',  friends: @friends%>
  </div>
  <br>

  <%= link_to 'New Friend', new_friend_path,  class:"btn btn-secondary"  %>
</div>
