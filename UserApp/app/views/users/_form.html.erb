<%= form_with model: user, url: url, method: method, local: true do |f| %>
  <div class="form-outline mb-4">
    <%= f.label :username, style: "display: block" %>
    <%= f.text_field :username, class:"form-control" %>
  </div>
   <div class="form-group">
   <%= f.label :gender, style: "display: block" %>
  <%= f.radio_button :gender, 'male', checked: true %> male
    <%= f.radio_button :gender, 'female' %> female
  </div>
  <div class="form-group">
    <%= f.label :address, style: "display: block" %>
    <%= f.text_field :address, class:'form-control'%>
  </div>
  <div class="form-group">
    <%= f.label :birthday, style: "display: block" %>
    <%= f.date_field :birthday, format: "dd/mm/YYYY", class:'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :email, style: "display: block" %>
    <%= f.text_field :email, class:'form-control' %>
  </div>
  <div class="actions">
    <%= f.submit "Save", class: 'btn btn-outline-primary' %>
    <%=link_to "Back", users_path,class:'btn btn-outline-success'%>
  </div>
<% end %>
