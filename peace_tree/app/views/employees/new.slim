.card.w-50.p-3.mx-auto
  .card-header.justify-content-between.align-items-center
    h1.mb-0
      | Employee Info
  .card-body
     = simple_form_for @employee do |f|
      = f.error_notification
      .form-inputs
        = f.input :full_name,
          autofocus: true,
          required: true,
          input_html: { autocomplete: 'full_name' },
          label_html: { class: 'form-label mb-3' },
          wrapper_html: { class: 'mb-3' },
          placeholder: 'Johnny Dang'
        = f.input :address,
          required: true,
          input_html: { autocomplete: 'address' },
          label_html: { class: 'form-label mb-3' },
          wrapper_html: { class: 'mb-3' },
          placeholder: 'address'
        = f.input :phone_number,
          required: true,
          label_html: { class: 'form-label mb-3' },
          wrapper_html: { class: 'mb-3' },
          placeholder: '8412345678'
        = f.input :department_id,
          as: :select,
          collection: Department.all,
          prompt: 'Select department',
          required: true,
          label_html: { class: 'form-label mb-3' },
          wrapper_html: { class: 'mb-3' }
      .form-actions.mb-3
        = f.button :submit, 'Create', class: 'btn btn-primary w-100 mb-3'
        = link_to 'Logout', destroy_user_session_path, method: :delete, class: 'btn btn-warning w-100'
